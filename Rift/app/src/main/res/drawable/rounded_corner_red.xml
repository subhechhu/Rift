<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1b6163" />
            <gradient android:angle="-90" android:startColor="#34a8ab" android:endColor="#37a8ab"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#267e80" />
            <solid android:color="#31abae"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1b6163" />
            <gradient android:angle="-90" android:startColor="#267e80" android:endColor="#2c9ea1"  />
        </shape>
    </item>
</selector>